{% extends 'front.html.twig' %}

{% block title %}Votre Profile{% endblock %} 
{% block hero %}
  
            
{% endblock %}
 

{% block body %}

<section id="profile">
  <div class="container py-5">
    <div class="row justify-content-end">
      <a href="{{ path('edit_password') }}" class="btn btn-success" style="max-width: 270px;margin-bottom:20px"><i class="bi bi-key"></i> Modifier mon mot de passe</a>&nbsp;&nbsp;<a href="{{ path('edit_infos') }}" class="btn btn-success" style="max-width: 250px;margin-bottom:20px"><i class="bi bi-pencil"></i> Modifier mes informations</a>
    </div>
    

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <span class="bi bi-person-circle" style="font-size: 3.9rem;"></span>
            <h5 class="my-3">{{ app.user.username }}</h5>
           
            <p class="text-muted mb-4">{{ app.user.address }}</p>
            
          </div>
        </div>
        
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ app.user.email }}</p>
              </div>
            </div>
            <hr>
            
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Téléphone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ app.user.phone }}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Téléphone 2</p>
              </div>
             
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ app.user.phone2 }}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Adresse</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ app.user.address }}</p>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>

{% endblock %}