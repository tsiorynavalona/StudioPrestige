{% extends 'front.html.twig' %}

{% block hero %}
  <section id="hero" class="hero d-flex flex-column justify-content-center align-items-center" data-aos="fade" data-aos-delay="1500">
     <div class="container">
         <div class="row justify-content-center">
             <div class="col-lg-6 text-center">
                 <h2><span>StudioPrestige</span> est un studio de photographie professionnel</h2>
                 <p>Nous sommes spécialisés dans la photographie de portrait, de mode, de publicité et d'événementiel. Nous nous engageons à fournir à nos clients des images de haute qualité qui capturent leur beauté, leur personnalité et leur style</p>
                 <a href="{{ path('contact') }}" class="btn-get-started">Contactez-nous</a>
             </div>
         </div>
     </div>
 </section><!-- End Hero Section -->
            
{% endblock %}
 

{% block body %}
    <section id="gallery" class="gallery">
        <div class="row justify-content-center">
          <div class="col-lg-6 text-center title-container">
            <h2>Certaines de nos réalisations</h2>
          </div>
        </div>
        <div class="container-fluid">
  
          <div class="row gy-4 justify-content-center">
            {% for photo in photos %}
            <div class="col-xl-3 col-lg-4 col-md-6">
              <div class="gallery-item h-100">
                <img src="{{ asset('build/' ~ photo.url) }}" class="img-fluid" alt="">
                <div class="gallery-links d-flex align-items-center justify-content-center">
                  <a href="{{ asset('build/' ~ photo.url) }}" title="{{ photo.title }}" class="glightbox preview-link"><i class="bi bi-arrows-angle-expand"></i></a>
                  <a href="{{ path('gallery-single', {id : photo.id, photo_label : photo.title | slug }) }}" class="details-link"><i class="bi bi-link-45deg"></i></a>
                </div>
              </div>
            </div>
            {% endfor %}
          </div><!-- End Gallery Item -->
  
        </div>
    </section>
{% endblock %}
